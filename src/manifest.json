{
  "manifest_version": 2,
  "name": "Links-Explosion",
  "description": "open multiple links at once",
  "version": "1.0",
  "homepage_url": "https://github.com/Efrat19/explode-chrome-ext",
  "browser_action": {
      "default_icon": "128.png"
  },
  "icons":{
       "16":"16.png",
       "32":"32.png",
       "48":"48.png",
       "64":"64.png",
       "128":"128.png"
  },
  "background" : {
      "scripts" : ["background.bundle.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js":      ["content.bundle.js"]
    }],
  "permissions": [
      "activeTab"
  ],
  "content_security_policy": "script-src 'unsafe-eval' 'self'; object-src 'self' 'unsafe-eval';",
  "update_url": "https://efrat19.github.io/links-explosion/update.xml"
}
