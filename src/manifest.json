{
  "manifest_version": 2,
  "name": "Explode",
  "description": "open multiple links",
  "version": "1.0",
  "homepage_url": "https://github.com/dvidsilva/chrome-ext-sample",
  "browser_action": {
      "default_icon": "128.png"
  },
  "icons":{
       "16":"16.png",
       "32":"32.png",
       "48":"48.png",
       "64":"64.png",
       "128":"128.png"
  },
  "background" : {
      "scripts" : ["background.bundle.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js":      ["content.bundle.js"]
    }],
  "permissions": [
      "activeTab"
  ],
  "content_security_policy": "script-src 'unsafe-eval' 'self'; object-src 'self' 'unsafe-eval';"
}